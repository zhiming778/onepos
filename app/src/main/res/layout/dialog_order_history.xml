<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:padding="@dimen/distance_med">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/distance_med"
        android:layout_marginBottom="@dimen/distance_med"
        android:textSize="@dimen/text_size_med"
        android:id="@+id/tv_date"
        android:text="@string/label_date"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_date"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/distance_med"
        android:layout_marginBottom="@dimen/distance_med"
        android:textSize="@dimen/text_size_med"
        android:id="@+id/tv_order_type"
        android:text="@string/label_order_type"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_order_type"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/distance_med"
        android:layout_marginBottom="@dimen/distance_med"
        android:textSize="@dimen/text_size_med"
        android:id="@+id/tv_address"
        android:text="@string/label_address"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_address"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/distance_med"
        android:layout_marginBottom="@dimen/distance_med"
        android:textSize="@dimen/text_size_med"
        android:id="@+id/tv_total"
        android:text="@string/label_total"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_reorder_all"
        style="@style/CustomButton"
        android:text="@string/btn_reorder_item"
        android:id="@+id/btn_reorder_item"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_reorder_item"
        app:layout_constraintEnd_toStartOf="@id/btn_cancel"
        style="@style/CustomButton"
        android:text="@string/btn_reorder_all"
        android:id="@+id/btn_reorder_all"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_reorder_all"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/CustomButton"
        android:text="@string/btn_cancel"
        android:id="@+id/btn_cancel"
    />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_total"
        app:layout_constraintBottom_toTopOf="@id/btn_reorder_item"
        android:layout_marginTop="@dimen/distance_med"
        android:layout_marginBottom="@dimen/distance_med"
        android:id="@+id/rv_receipt" />
</androidx.constraintlayout.widget.ConstraintLayout>