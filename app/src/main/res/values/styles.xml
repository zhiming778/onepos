<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
    </style>
    <style name="CustomButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@color/colorMain</item>
        <item name="android:textColor">@color/colorWhiteText</item>
        <item name="android:textSize">@dimen/text_size_med</item>
        <item name="android:minHeight">@dimen/no_distance</item>
        <item name="android:padding">@dimen/distance_small</item>
    </style>
    <style name="PasswordButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/underline</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_size_med</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/distance_large</item>
    </style>
    <style name="FormLabel" parent="TextAppearance.AppCompat">
        <item name="android:background">@null</item>
        <item name="android:padding">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_med</item>
        <item name="android:layout_width">@dimen/label_width</item>
        <item name="android:layout_height">@dimen/form_cell_height</item>
    </style>
    <style name="FormField" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">@dimen/field_width</item>
        <item name="android:layout_height">@dimen/form_cell_height</item>
        <item name="android:textSize">@dimen/text_size_med</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="KeyboardButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/distance_med</item>
        <item name="android:paddingBottom">@dimen/distance_med</item>
        <item name="android:paddingStart">@dimen/button_keyboard_padding</item>
        <item name="android:paddingEnd">@dimen/button_keyboard_padding</item>
        <item name="android:textSize">@dimen/text_size_med</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:padding">@dimen/distance_small</item>
        <item name="android:background">@drawable/radio_button_state_list</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_size_med</item>
    </style>
</resources>
